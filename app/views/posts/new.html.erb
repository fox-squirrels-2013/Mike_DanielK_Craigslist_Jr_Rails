<%= form_for @post, url: {action: "create"} do |f| %>
  <p>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
                      <!-- where we assign, drop down options, value, what it shows  -->
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "60x12" %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit "Post" %>
  </p>
<% end %>